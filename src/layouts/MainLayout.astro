---
import "../styles/global.css";
import { BackgroundEngine } from "../components/ui/BackgroundEngine";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "ClearMetrics Lab",
  description = "Building the next generation of mobile apps.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <!-- Geist Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <style>
      @font-face {
        font-family: 'Geist';
        src: url('/fonts/GeistVF.woff2') format('woff2');
        font-weight: 100 900;
        font-style: normal;
        font-display: swap;
      }
    </style>
  </head>
  <body class="min-h-screen bg-background text-text-primary">
    <!-- Background Engine (Grid + Orbs) - Fixed behind everything -->
    <BackgroundEngine client:load />

    <!-- Navigation - Fixed at top -->
    <nav class="fixed top-0 left-0 right-0 z-50 border-b border-white/5 bg-background/80 backdrop-blur-xl">
      <div class="mx-auto max-w-6xl px-6 py-4 flex items-center justify-between">
        <a href="/" class="text-lg font-semibold tracking-tight text-text-primary hover:text-accent transition-colors">
          ClearMetrics Lab
        </a>
        <div class="flex items-center gap-6">
          <a href="/#apps" class="nav-link text-sm text-text-muted hover:text-accent transition-all duration-300 relative group">
            <span class="relative z-10">Apps</span>
            <span class="absolute inset-0 -z-10 rounded-md bg-accent/0 group-hover:bg-accent/10 blur-sm transition-all duration-300"></span>
          </a>
          <a href="/blog" class="nav-link text-sm text-text-muted hover:text-accent transition-all duration-300 relative group">
            <span class="relative z-10">Blog</span>
            <span class="absolute inset-0 -z-10 rounded-md bg-accent/0 group-hover:bg-accent/10 blur-sm transition-all duration-300"></span>
          </a>
          <a href="/#contact" class="nav-link text-sm text-text-muted hover:text-accent transition-all duration-300 relative group">
            <span class="relative z-10">Contact</span>
            <span class="absolute inset-0 -z-10 rounded-md bg-accent/0 group-hover:bg-accent/10 blur-sm transition-all duration-300"></span>
          </a>
        </div>
      </div>
    </nav>

    <!-- Main Content - Above background -->
    <main class="relative z-10 pt-16">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="relative z-10 border-t border-white/5 py-12 mt-24">
      <div class="mx-auto max-w-6xl px-6">
        <div class="flex flex-col md:flex-row justify-between items-center gap-4">
          <p class="text-sm text-text-muted">
            Â© {new Date().getFullYear()} ClearMetrics Lab. All rights reserved.
          </p>
          <div class="flex items-center gap-6">
            <a href="/blog" class="text-sm text-text-muted hover:text-text-primary transition-colors">
              Blog
            </a>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
