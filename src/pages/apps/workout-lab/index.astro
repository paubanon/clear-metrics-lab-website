---
import MainLayout from "../../../layouts/MainLayout.astro";
import { ThemeProvider } from "../../../components/ThemeProvider";
import { ThemeToggle } from "../../../components/ThemeToggle";
import { WorkoutLabHero } from "../../../components/workout-lab/WorkoutLabHero";
import { FeaturesSection } from "../../../components/workout-lab/FeaturesSection";
import { PricingSection } from "../../../components/workout-lab/PricingSection";
import { RewardsSection } from "../../../components/workout-lab/RewardsSection";
import { DownloadCTA } from "../../../components/workout-lab/DownloadCTA";

const title = "Workout Lab - Ultimate Flexible Workout Tracker for Serious Athletes";
const description = "Track any exercise, any way. Seamless supersets, powerful data analysis, and proprietary goal algorithm. Built for strength athletes, CrossFit, calisthenics, and powerlifting.";
---

<MainLayout
  title={title}
  description={description}
>
  <div class="min-h-screen bg-[var(--color-bg-dark)] text-[var(--color-text)] transition-colors duration-300">
    {/* Hero Section with integrated theme toggle */}
    <div class="relative">
      <ThemeProvider client:only="react">
        {/* Theme Toggle - Centered at top, floating */}
        <div class="absolute top-8 left-1/2 -translate-x-1/2 z-50">
          <div class="backdrop-blur-md bg-[var(--color-bg)]/60 rounded-full p-1 shadow-lg" style="border: 1px solid var(--color-border)">
            <ThemeToggle client:only="react" />
          </div>
        </div>
      </ThemeProvider>

      <WorkoutLabHero client:load />
    </div>

    {/* Features Section */}
    <FeaturesSection client:load />

    {/* Pricing Section */}
    <PricingSection client:load />

    {/* Rewards Section */}
    <RewardsSection client:load />

    {/* Download CTA */}
    <DownloadCTA client:load />

    {/* Footer */}
    <footer class="py-12 px-6 border-t" style="border-color: var(--color-border)">
      <div class="max-w-6xl mx-auto text-center">
        <p style="color: var(--color-text-muted)">
          Â© 2026 ClearMetrics Lab. Built with scientific precision.
        </p>
        <div class="mt-4 flex justify-center gap-6">
          <a href="/apps/workout-lab/privacy-policy" style="color: var(--color-text-muted)" class="hover:underline">Privacy Policy</a>
          <a href="/#contact" style="color: var(--color-text-muted)" class="hover:underline">Contact</a>
        </div>
      </div>
    </footer>
  </div>
</MainLayout>
